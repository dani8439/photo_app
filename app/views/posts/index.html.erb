

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image, class:'img-responsive'), post_path(post) %>
      </div>
      <p class="description">
        <%= post.description %>
      </p>
    </div>
  <% end %>
</div> 

